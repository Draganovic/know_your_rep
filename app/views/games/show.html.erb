<!-- <form with @senator name and text box to guess state> -->
<!-- submit button that passes in game_id, senator_id, guess to /GamePlayController -->

<%= @senator.name  %>
  <%= label_tag(:guess, "State")%>
  <%= text_field_tag(:guess) %>
  <%= hidden_field_tag :game_id, @game.id %>
  <%= hidden_field_tag :senator_id, @senator.id %>
  <%= submit_tag "Submit" %>
<% end %>


<%= "Game over. Your score is #{@game.score}" %>
